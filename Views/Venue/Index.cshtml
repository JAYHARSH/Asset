@model IEnumerable<Asset.Models.VenueViewModel.VenueViewModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>
@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Venue_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
               
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
                @Html.DropDownList("Size",new SelectList(Model.Select(x=>x.Size)))
            <th>
                @Html.DisplayNameFor(model => model.Cost)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Venue_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Size)
                   
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cost)
                </td>
                <td>
                    @if (User.IsInRole("Admin"))
                    {
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                        @Html.ActionLink("Details", "Details", new { id = item.Id })
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    }

                    @Html.ActionLink("Reserve", "Index", "User", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
